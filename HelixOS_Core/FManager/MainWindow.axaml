<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="FManager.MainWindow"
        Title="Helix File Manager"
        Width="800" Height="600"
        TransparencyLevel="AcrylicBlur"
        Background="Transparent">

	<Grid>
		<!-- Layout dividido em sidebar e conteúdo -->
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="250" />
			<!-- Largura fixa para a sidebar -->
			<ColumnDefinition Width="*" />
			<!-- Restante para o conteúdo -->
		</Grid.ColumnDefinitions>

		<!-- Sidebar: Blur APENAS no fundo -->
		<Border Grid.Column="0"
                Background="#AA2F3542"
			CornerRadius="0,10,10,0">

			<!-- Efeito de blur APENAS no fundo (não no conteúdo) -->
			<Border.Effect>
				<BlurEffect Radius="10" />
			</Border.Effect>

			<!-- StackPanel com os itens (texto nítido) -->
			<StackPanel Margin="15" Opacity="1">
				<!-- Opacidade máxima para o conteúdo -->
				<TextBlock Text="Locais" FontWeight="Bold" Foreground="White"/>
				<Button Content="📂 Documentos" Style="{StaticResource SidebarButtonStyle}"/>
				<Button Content="🎵 Música" Style="{StaticResource SidebarButtonStyle}"/>
			</StackPanel>
		</Border>

		<!-- Área de conteúdo (fundo branco) -->
		<ScrollViewer Grid.Column="1" Background="White">
			<TextBlock Text="Área de conteúdo" VerticalAlignment="Center" HorizontalAlignment="Center"/>
		</ScrollViewer>
	</Grid>
</Window>